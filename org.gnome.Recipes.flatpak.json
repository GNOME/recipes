{
    "app-id": "org.gnome.Recipes",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.22",
    "sdk": "org.gnome.Sdk",
    "command": "recipes",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "gnome-autoar",
            "sources": [
                    {
                        "type": "git",
                        "url": "git://git.gnome.org/gnome-autoar"
                    }
            ]
        },
        {
            "name": "recipes",
            "sources": [
                    {
                        "type": "git",
                        "url": "git://git.gnome.org/recipes"
                    }
            ]
        }
    ]
}
